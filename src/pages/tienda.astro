---
import Layout from "../layouts/Layout.astro";
import products from "../data/products.js";
---

<Layout title="Tienda">
  <section class="tienda-container">
    <h1 class="tienda-title">Nuestra Colecci√≥n</h1>

    <div class="products-grid">
      {products.map((product) => (
        <a href={`/producto/${product.slug}`} class="product-card">
          <div class="product-img">
            <img src={product.image} alt={product.title} />
          </div>
          <div class="product-info">
            <h3>{product.title}</h3>
            <p>{product.description}</p>
            <span class="price">{product.price}</span>
          </div>
        </a>
      ))}
    </div>
  </section>
</Layout>

<style>
  .tienda-container {
    max-width: 1300px;
    margin: 0 auto;
    padding: 4rem 1rem;
  }

  .tienda-title {
    text-align: center;
    font-size: 2.7rem;
    font-weight: 700;
    margin-bottom: 3rem;
    color: #1a1a1a;
  }

  /* GRID */
  .products-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
    gap: 2rem;
  }

  /* CARD */
  .product-card {
    display: block;
    background: #fff;
    border-radius: 18px;
    overflow: hidden;
    box-shadow: 0 8px 25px rgba(0,0,0,0.08);
    transition: transform 0.25s ease, box-shadow 0.25s ease;
    text-decoration: none;
  }

  .product-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 14px 35px rgba(0,0,0,0.15);
  }

  /* IMAGEN */
  .product-img img {
    width: 100%;
    height: 220px;
    object-fit: cover;
    display: block;
  }

  /* INFO */
  .product-info {
    padding: 1.3rem 1.1rem;
  }

  .product-info h3 {
    font-size: 1.2rem;
    margin-bottom: 0.6rem;
    color: #222;
    font-weight: 600;
  }

  .product-info p {
    font-size: 0.95rem;
    color: #555;
    min-height: 42px;
  }

  .product-info .price {
    margin-top: 1rem;
    display: inline-block;
    font-size: 1.1rem;
    font-weight: 700;
    color: #111;
  }

  /* RESPONSIVE */
  @media (max-width: 500px) {
    .tienda-title {
      font-size: 2.2rem;
    }
    .product-info p {
      min-height: auto;
    }
  }
</style>
